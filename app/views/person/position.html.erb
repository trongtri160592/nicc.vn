<div class="main-content" id="content" tabindex="0">
  <div class="row general-page-body-container collapse">
    <div class="large-12 columns">
      <div class="row">
        <div id="cgvSlBreadcrumb" class="medium-8 columns bcrumbs">
          <div class="contentid-870117 slot-item only-SI">
            <ul class="breadcrumbs">
              <li><a href="/">Trang chủ</a></li>
              <li><a href="/person">Nhân sự</a></li>
            </ul>
          </div>
        </div>
      </div> <!-- END "row" -->
    </div> <!-- END "large-12 columns" -->
    <div class="row">
      <!--    SECTION NAVIGATION -->
      <div id="nvcgSlSectionNav" class="medium-3 columns local-navigation">
        <div class="contentid-916491 slot-item only-SI">
          <div class="section-nav">
            <ul>
              <li class="level-0 has-children">
                <div>
                  Danh sách nhân sự
                </div>
                <ul>
                  <% @positions.each do |position| %>
                    <% if position.id == @position.id %>
                      <li class="level-1 contains-current">
                        <div class="current-page">
                          <a href="/person/position/<%= position.id %>"><%= position.position %></a>
                        </div>
                      </li>
                    <% else %>
                      <li class="level-1">
                        <div>
                          <a href="/person/position/<%= position.id %>"><%= position.position %></a>
                        </div>
                      </li>
                    <% end %>
                  <% end %>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <!--    END SECTION NAVIGATION -->
      <div class="medium-9 columns contentzone has-section-nav" id="main" tabindex="0" role="main">
        <!-- ********************************* BEGIN List of person ********************************** -->
        <div class="contentid-1034469 slot-item last-SI">
          <% if @position.people.length == 0 %>
            <span> Hiện tại chưa có nhân sự tại vị trí này</span>
          <% else %>
            <% @position.people.each do |person| %>
              <div class="row vertical-space">
                <div class="large-3 columns">
                  <img alt="<%= person.name %>" src="<%= person.portrait.url %>">
                </div>
                <div class="large-9 columns">
                  <h3 id="ui-id-3"><a href="/about-nci/leadership/nci-deputy-director"><%= person.name %></a></h3>
                  <p><%= person.background %></p>
                </div>
              </div>
            <% end %>
          <% end %>

        </div>
        <!-- ********************************* END List of person ********************************** -->
      </div> <!-- END Main -->
    </div> <!-- END "row" -->
  </div> <!-- END "row general-page-body-container collapse" -->
</div>